{
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "desert-email",
    "desert-mondaycrm",
    "desert-quoting"
  ],
  "permissions": {
    "allow": ["Bash(ls:*)"]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bun x ultracite fix"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/gsd-check-update.js"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "node .claude/hooks/gsd-statusline.js"
  }
}
