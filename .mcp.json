{
  "mcpServers": {
    "desert-email": {
      "command": "bun",
      "args": ["./services/email/mcp-server.ts"]
    },
    "desert-mondaycrm": {
      "command": "bun",
      "args": ["./services/monday/mcp-server.ts"]
    },
    "desert-quoting": {
      "command": "bun",
      "args": ["./services/quoting/mcp-server.ts"]
    },
    "desert-mistral": {
      "command": "uv",
      "args": [
        "--directory",
        "./services/mistral",
        "run",
        "mistral-mcp",
        "serve"
      ],
      "env": {
        "UV_ENV_FILE": "../../.env"
      }
    }
  }
}
